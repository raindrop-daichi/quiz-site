<script is:inline define:vars={{ quizData: quiz.data }}>
  /**
   * Quiz Application Script
   * Manages quiz state, UI updates, and user interactions
   */

  // ============================================
  // State Management
  // ============================================
  
  /** Current question index (0-based) */
  let currentQuestionIndex = 0;
  
  /** Number of correct answers */
  let score = 0;
  
  /** Number of questions attempted */
  let attempted = 0;
  
  /** Index of selected answer (null if not yet selected) */
  let selectedAnswer = null;
  
  /** Quiz questions data */
  const questions = quizData.questions;

  // ============================================
  // DOM Element References (cached for performance)
  // ============================================
  
  let progressFill;
  let currentQuestionEl;
  let scoreEl;
  let attemptedEl;
  let questionText;
  let choicesContainer;
  let explanationContainer;
  let explanationText;
  let questionContainer;
  let resultContainer;
  let finalScoreEl;
  let finalTotalEl;
  let percentageEl;
  let nextButton;
  let retryButton;

  /**
   * Cache DOM element references for better performance
   */
  function cacheDOMElements() {
    progressFill = document.getElementById('progress-fill');
    currentQuestionEl = document.getElementById('current-question');
    scoreEl = document.getElementById('score');
    attemptedEl = document.getElementById('attempted');
    questionText = document.getElementById('question-text');
    choicesContainer = document.getElementById('choices-container');
    explanationContainer = document.getElementById('explanation-container');
    explanationText = document.getElementById('explanation-text');
    questionContainer = document.getElementById('question-container');
    resultContainer = document.getElementById('result-container');
    finalScoreEl = document.getElementById('final-score');
    finalTotalEl = document.getElementById('final-total');
    percentageEl = document.getElementById('percentage');
    nextButton = document.getElementById('next-button');
    retryButton = document.getElementById('retry-button');
  }

  // ============================================
  // UI Update Functions
  // ============================================

  /**
   * Update progress bar and score display
   */
  function updateProgress() {
    if (progressFill && currentQuestionEl && scoreEl && attemptedEl) {
      const progress = ((currentQuestionIndex + 1) / questions.length) * 100;
      progressFill.style.width = `${progress}%`;
      currentQuestionEl.textContent = (currentQuestionIndex + 1).toString();
      scoreEl.textContent = score.toString();
      attemptedEl.textContent = attempted.toString();
    }
  }

  /**
   * Display current question and choices
   */
  function displayQuestion() {
    const question = questions[currentQuestionIndex];
    
    if (!questionText || !choicesContainer || !explanationContainer) {
      console.error('Required DOM elements not found');
      return;
    }

    // Update question text
    questionText.textContent = question.question;
    
    // Reset UI state
    choicesContainer.innerHTML = '';
    explanationContainer.style.display = 'none';
    selectedAnswer = null;

    // Create choice buttons
    question.choices.forEach((choice, index) => {
      const button = document.createElement('button');
      button.className = 'choice-button';
      button.textContent = choice;
      button.setAttribute('aria-label', `ÈÅ∏ÊäûËÇ¢ ${index + 1}: ${choice}`);
      button.onclick = () => selectAnswer(index);
      choicesContainer.appendChild(button);
    });

    updateProgress();
  }

  // ============================================
  // User Interaction Handlers
  // ============================================

  /**
   * Handle answer selection
   * @param {number} index - Index of selected answer
   */
  function selectAnswer(index) {
    // Prevent multiple selections
    if (selectedAnswer !== null) return;

    selectedAnswer = index;
    attempted++;

    const question = questions[currentQuestionIndex];
    const buttons = document.querySelectorAll('.choice-button');

    // Update button states with visual feedback
    buttons.forEach((button, i) => {
      button.disabled = true;
      if (i === question.correctAnswer) {
        button.classList.add('correct');
        button.setAttribute('aria-label', `Ê≠£Ëß£: ${button.textContent}`);
      } else if (i === index) {
        button.classList.add('incorrect');
        button.setAttribute('aria-label', `„ÅÇ„Å™„Åü„ÅÆÈÅ∏Êäû (‰∏çÊ≠£Ëß£): ${button.textContent}`);
      }
    });

    // Update score if correct
    if (index === question.correctAnswer) {
      score++;
    }

    // Show explanation
    if (explanationContainer && explanationText) {
      explanationText.textContent = question.explanation;
      
      // Handle reference URL if available
      const referenceLinkContainer = document.getElementById('reference-link-container');
      const referenceLink = document.getElementById('reference-link');
      if (question.referenceUrl && referenceLinkContainer && referenceLink) {
        referenceLink.href = question.referenceUrl;
        // Extract domain name for better readability
        try {
          const url = new URL(question.referenceUrl);
          referenceLink.textContent = url.hostname.replace('www.', '');
        } catch {
          referenceLink.textContent = question.referenceUrl;
        }
        referenceLinkContainer.style.display = 'block';
      } else if (referenceLinkContainer) {
        referenceLinkContainer.style.display = 'none';
      }
      
      explanationContainer.style.display = 'block';
      
      // Scroll to explanation on mobile
      if (window.innerWidth <= 600) {
        setTimeout(() => {
          explanationContainer.scrollIntoView({ behavior: 'smooth', block: 'nearest' });
        }, 300);
      }
    }

    updateProgress();
  }

  /**
   * Move to next question or show results
   */
  function nextQuestion() {
    currentQuestionIndex++;
    if (currentQuestionIndex < questions.length) {
      displayQuestion();
    } else {
      showResults();
    }
  }

  /**
   * Display final quiz results
   */
  function showResults() {
    if (!questionContainer || !explanationContainer || !resultContainer) {
      console.error('Result display elements not found');
      return;
    }

    // Hide question and explanation
    questionContainer.style.display = 'none';
    explanationContainer.style.display = 'none';
    
    // Show results
    resultContainer.style.display = 'block';

    if (finalScoreEl && finalTotalEl && percentageEl) {
      finalScoreEl.textContent = score.toString();
      finalTotalEl.textContent = questions.length.toString();
      const percentage = Math.round((score / questions.length) * 100);
      percentageEl.textContent = percentage.toString();
    }

    // Scroll to top on mobile
    if (window.innerWidth <= 600) {
      window.scrollTo({ top: 0, behavior: 'smooth' });
    }
  }

  /**
   * Reset quiz to initial state
   */
  function retryQuiz() {
    // Reset state
    currentQuestionIndex = 0;
    score = 0;
    attempted = 0;
    selectedAnswer = null;

    // Update UI
    if (questionContainer && resultContainer) {
      questionContainer.style.display = 'block';
      resultContainer.style.display = 'none';
      displayQuestion();
    }

    // Scroll to top
    window.scrollTo({ top: 0, behavior: 'smooth' });
  }

  // ============================================
  // Initialization
  // ============================================

  /**
   * Initialize quiz application
   */
  function initializeQuiz() {
    cacheDOMElements();
    displayQuestion();

    // Set up event listeners
    if (nextButton) {
      nextButton.addEventListener('click', nextQuestion);
    }

    if (retryButton) {
      retryButton.addEventListener('click', retryQuiz);
    }

    // Keyboard navigation support
    document.addEventListener('keydown', (e) => {
      if (e.key === 'Enter' && selectedAnswer !== null) {
        if (explanationContainer && explanationContainer.style.display === 'block') {
          nextQuestion();
        }
      }
    });
  }

  // Wait for DOM to be ready
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', initializeQuiz);
  } else {
    initializeQuiz();
  }
</script>

