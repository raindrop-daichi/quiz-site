<script is:inline define:vars={{ quizData: quiz.data }}>
  let currentQuestionIndex = 0;
  let score = 0;
  let attempted = 0;
  let selectedAnswer = null;
  const questions = quizData.questions;

  function updateProgress() {
    const progressFill = document.getElementById('progress-fill');
    const currentQuestionEl = document.getElementById('current-question');
    const scoreEl = document.getElementById('score');
    const attemptedEl = document.getElementById('attempted');

    if (progressFill && currentQuestionEl && scoreEl && attemptedEl) {
      const progress = ((currentQuestionIndex + 1) / questions.length) * 100;
      progressFill.style.width = `${progress}%`;
      currentQuestionEl.textContent = (currentQuestionIndex + 1).toString();
      scoreEl.textContent = score.toString();
      attemptedEl.textContent = attempted.toString();
    }
  }

  function displayQuestion() {
    const question = questions[currentQuestionIndex];
    const questionText = document.getElementById('question-text');
    const choicesContainer = document.getElementById('choices-container');
    const explanationContainer = document.getElementById('explanation-container');

    if (questionText && choicesContainer && explanationContainer) {
      questionText.textContent = question.question;
      choicesContainer.innerHTML = '';
      explanationContainer.style.display = 'none';
      selectedAnswer = null;

      question.choices.forEach((choice, index) => {
        const button = document.createElement('button');
        button.className = 'choice-button';
        button.textContent = choice;
        button.onclick = () => selectAnswer(index);
        choicesContainer.appendChild(button);
      });

      updateProgress();
    }
  }

  function selectAnswer(index) {
    if (selectedAnswer !== null) return;

    selectedAnswer = index;
    attempted++;

    const question = questions[currentQuestionIndex];
    const buttons = document.querySelectorAll('.choice-button');
    const explanationContainer = document.getElementById('explanation-container');
    const explanationText = document.getElementById('explanation-text');

    buttons.forEach((button, i) => {
      button.disabled = true;
      if (i === question.correctAnswer) {
        button.classList.add('correct');
      } else if (i === index) {
        button.classList.add('incorrect');
      }
    });

    if (index === question.correctAnswer) {
      score++;
    }

    if (explanationContainer && explanationText) {
      explanationText.textContent = question.explanation;
      
      // Handle reference URL if available
      const referenceLinkContainer = document.getElementById('reference-link-container');
      const referenceLink = document.getElementById('reference-link');
      if (question.referenceUrl && referenceLinkContainer && referenceLink) {
        referenceLink.href = question.referenceUrl;
        // Extract domain name for better readability
        try {
          const url = new URL(question.referenceUrl);
          referenceLink.textContent = url.hostname.replace('www.', '');
        } catch {
          referenceLink.textContent = question.referenceUrl;
        }
        referenceLinkContainer.style.display = 'block';
      } else if (referenceLinkContainer) {
        referenceLinkContainer.style.display = 'none';
      }
      
      explanationContainer.style.display = 'block';
    }

    updateProgress();
  }

  function nextQuestion() {
    currentQuestionIndex++;
    if (currentQuestionIndex < questions.length) {
      displayQuestion();
    } else {
      showResults();
    }
  }

  function showResults() {
    const questionContainer = document.getElementById('question-container');
    const explanationContainer = document.getElementById('explanation-container');
    const resultContainer = document.getElementById('result-container');
    const finalScoreEl = document.getElementById('final-score');
    const finalTotalEl = document.getElementById('final-total');
    const percentageEl = document.getElementById('percentage');

    if (questionContainer && explanationContainer && resultContainer && finalScoreEl && finalTotalEl && percentageEl) {
      questionContainer.style.display = 'none';
      explanationContainer.style.display = 'none';
      resultContainer.style.display = 'block';

      finalScoreEl.textContent = score.toString();
      finalTotalEl.textContent = questions.length.toString();
      const percentage = Math.round((score / questions.length) * 100);
      percentageEl.textContent = percentage.toString();
    }
  }

  function retryQuiz() {
    currentQuestionIndex = 0;
    score = 0;
    attempted = 0;
    selectedAnswer = null;

    const questionContainer = document.getElementById('question-container');
    const resultContainer = document.getElementById('result-container');

    if (questionContainer && resultContainer) {
      questionContainer.style.display = 'block';
      resultContainer.style.display = 'none';
      displayQuestion();
    }
  }

  // Initialize quiz
  document.addEventListener('DOMContentLoaded', () => {
    displayQuestion();

    const nextButton = document.getElementById('next-button');
    const retryButton = document.getElementById('retry-button');

    if (nextButton) {
      nextButton.addEventListener('click', nextQuestion);
    }

    if (retryButton) {
      retryButton.addEventListener('click', retryQuiz);
    }
  });
</script>

<style>
  .quiz-header {
    margin-bottom: 30px;
    border-bottom: 2px solid #e0e0e0;
    padding-bottom: 20px;
  }

  .description {
    color: #666;
    font-size: 1.1rem;
  }

  .progress-container {
    margin-bottom: 30px;
  }

  .progress-text {
    display: flex;
    justify-content: space-between;
    margin-bottom: 10px;
    font-weight: 600;
    color: #667eea;
  }

  .progress-bar {
    height: 10px;
    background: #e0e0e0;
    border-radius: 5px;
    overflow: hidden;
  }

  .progress-fill {
    height: 100%;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    transition: width 0.3s ease;
  }

  #question-container {
    margin-bottom: 30px;
  }

  #question-text {
    font-size: 1.5rem;
    margin-bottom: 25px;
    color: #333;
  }

  .choices-container {
    display: flex;
    flex-direction: column;
    gap: 15px;
  }

  .choice-button {
    background: white;
    border: 2px solid #e0e0e0;
    border-radius: 8px;
    padding: 15px 20px;
    font-size: 1.1rem;
    text-align: left;
    cursor: pointer;
    transition: all 0.3s;
  }

  .choice-button:hover:not(:disabled) {
    border-color: #667eea;
    background: #f8f9ff;
    transform: translateX(5px);
  }

  .choice-button:disabled {
    cursor: not-allowed;
  }

  .choice-button.correct {
    background: #d4edda;
    border-color: #28a745;
    color: #155724;
  }

  .choice-button.incorrect {
    background: #f8d7da;
    border-color: #dc3545;
    color: #721c24;
  }

  .explanation-container {
    background: #f0f7ff;
    border-left: 4px solid #667eea;
    padding: 20px;
    margin-top: 20px;
    border-radius: 8px;
  }

  .explanation-container h3 {
    color: #667eea;
    margin-bottom: 10px;
    font-size: 1.2rem;
  }

  .explanation-container p {
    color: #555;
    margin-bottom: 15px;
    line-height: 1.8;
  }

  .reference-link {
    margin-top: 15px;
    padding-top: 15px;
    border-top: 1px solid #d0e0ff;
    color: #667eea;
    font-size: 0.95rem;
  }

  .reference-link a {
    color: #667eea;
    text-decoration: none;
    font-weight: 600;
    word-break: break-all;
  }

  .reference-link a:hover {
    text-decoration: underline;
  }

  .next-button {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    color: white;
    border: none;
    border-radius: 6px;
    padding: 12px 30px;
    font-size: 1rem;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.3s;
  }

  .next-button:hover {
    transform: translateY(-2px);
    box-shadow: 0 4px 12px rgba(102, 126, 234, 0.4);
  }

  .result-container {
    text-align: center;
    padding: 30px;
  }

  .result-container h2 {
    color: #667eea;
    margin-bottom: 30px;
    font-size: 2rem;
  }

  .result-score {
    background: #f8f9fa;
    border-radius: 12px;
    padding: 30px;
    margin-bottom: 30px;
  }

  .final-score {
    font-size: 2rem;
    font-weight: bold;
    color: #333;
    margin-bottom: 15px;
  }

  .percentage {
    font-size: 1.5rem;
    color: #667eea;
    font-weight: 600;
  }

  .result-actions {
    display: flex;
    gap: 20px;
    justify-content: center;
    flex-wrap: wrap;
  }

  .retry-button,
  .home-button {
    padding: 12px 30px;
    border-radius: 6px;
    font-size: 1rem;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.3s;
    border: none;
    text-decoration: none;
    display: inline-block;
  }

  .retry-button {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    color: white;
  }

  .home-button {
    background: white;
    color: #667eea;
    border: 2px solid #667eea;
  }

  .retry-button:hover,
  .home-button:hover {
    transform: translateY(-2px);
    box-shadow: 0 4px 12px rgba(102, 126, 234, 0.4);
  }

  @media (max-width: 600px) {
    #question-text {
      font-size: 1.2rem;
    }

    .choice-button {
      font-size: 1rem;
      padding: 12px 15px;
    }

    .result-actions {
      flex-direction: column;
    }
  }
</style>
